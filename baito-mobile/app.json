{
  "expo": {
    "name": "Baito - Gig Work Platform",
    "slug": "baito-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.baito.gigwork",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Baito needs camera access to capture selfies for shift clock-in verification.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Baito needs location access to verify your GPS coordinates during clock-in.",
        "NSLocationWhenInUseUsageDescription": "Baito needs location access to verify your GPS coordinates during clock-in.",
        "NSPhotoLibraryUsageDescription": "Baito needs photo library access to upload receipts and expense claims."
      },
      "associatedDomains": [
        "applinks:baito.app"
      ]
    },
    "android": {
      "package": "com.baito.gigwork",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Baito to access your camera for selfie clock-in verification."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Baito to use your location for GPS-based attendance tracking."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#3b82f6",
          "sounds": [
            "./assets/notification-sound.wav"
          ],
          "notificationPermission": "Allow Baito to send you shift reminders and updates."
        }
      ]
    ],
    "scheme": "baito",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "baito-mobile-prod"
      }
    },
    "owner": "baito-app",
    "updates": {
      "url": "https://u.expo.dev/baito-mobile-prod"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
