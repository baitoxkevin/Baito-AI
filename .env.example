# Supabase Configuration
# Get these from: https://app.supabase.com/project/aoiwrdzlichescqgnohi/settings/api
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Management API Token (Required for Claude Code MCP)
# Generate from: https://supabase.com/dashboard/account/tokens
# This allows Claude Code MCP to manage your project (migrations, logs, etc.)
SUPABASE_ACCESS_TOKEN=sbp_your_access_token_here

# Redis/Upstash Configuration (Optional - falls back to in-memory cache)
# REDIS_URL=redis://localhost:6379
# UPSTASH_REDIS_URL=https://your-upstash-url.upstash.io
# UPSTASH_REDIS_TOKEN=your_upstash_token

# Performance & Monitoring
# VITE_ENABLE_CACHE=true
# VITE_CACHE_TTL=300
# VITE_ENABLE_PERFORMANCE_MONITORING=false

# Sentry Error Monitoring (Optional but recommended for production)
# VITE_SENTRY_DSN=https://your-key@sentry.io/your-project-id
# VITE_SENTRY_ENVIRONMENT=production
# VITE_APP_VERSION=1.0.0

# Automated Database Backups
# VITE_ENABLE_BACKUPS=true
# VITE_BACKUP_FREQUENCY=daily
# VITE_BACKUP_RETENTION_DAYS=30

# Service Worker (for offline support)
# VITE_ENABLE_SW=false

# Optional: Add other environment variables as needed
# VITE_API_URL=
# VITE_ENABLE_ANALYTICS=false